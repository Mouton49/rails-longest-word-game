<h1>Make the longest word</h1>
<% @letters.each do |item| %>
  <h2><%=item.capitalize%></h2>
<% end %>
<form action="/score" method="post" class="form">
  <input type="text" name="word" placeholder="Enter a word">
  <input type="submit" value="Ask!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
</form>
